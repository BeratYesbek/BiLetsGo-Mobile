                        android:textColor="@color/inverse"
                        android:padding="2dp"

                        >

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Started Data: 12.12.2022 15:45"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:textColor="@color/inverse"
                        android:padding="2dp"
                        >

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Finished Data: 12.12.2022 15:45"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:textColor="@color/inverse"
                        android:padding="2dp"

                        >

                    </TextView>
                    <Button
                        android:id="@+id/btnSeeDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="See Detail"
                        android:textSize="10dp"
                        android:background="@drawable/custom_dark_button"
                        android:layout_margin="10dp"
